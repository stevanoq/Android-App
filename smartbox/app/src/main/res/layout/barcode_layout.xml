<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/barcodeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/barcodeInfo"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/barcodeImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/barcodeInfo"/>

    <TextView
        android:id="@+id/barcodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcodeImage"
        android:text="1234567890"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/tutupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcodeText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:text="@string/tutup"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
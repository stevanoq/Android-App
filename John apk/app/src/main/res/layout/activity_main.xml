<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/refreshHome">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/background">
    <ImageView
        android:id="@+id/logo1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        app:tint="#80FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/logo1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/logo1"
        app:layout_constraintStart_toStartOf="parent">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Resi"
          android:textColor="@color/white"
          android:textSize="16dp" />

      <EditText
          android:id="@+id/input_resi"
          android:layout_width="300dp"
          android:layout_height="30dp"
          android:background="@drawable/edit_text"
          android:hint="Resi.92817xxx"
          android:inputType="text"/>

    </LinearLayout>


    <Button
        android:id="@+id/inputBtn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="input"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:background="@drawable/button_shape"
        app:layout_constraintTop_toBottomOf="@id/input"
        app:layout_constraintEnd_toEndOf="@id/input"
        android:layout_marginVertical="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white_transparant"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/inputBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginVertical="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

          <TextView
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:text="Data Paket"
              android:textColor="@color/white"
              android:textSize="16dp" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Status Paket"
              android:textColor="@color/white"
              android:textSize="16dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_corner"
        android:layout_margin="30dp"
        android:elevation="2dp"
        app:menu="@menu/item_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled" />
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Setting"
    android:background="@color/main_yellow">

   <LinearLayout
       android:id="@+id/setting_button_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center_vertical|center_horizontal">

       <LinearLayout
           android:id="@+id/value_setting"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@color/main_blue">
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@drawable/value"
               app:tint="@color/white"/>

           <TextView
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Pengaturan Nilai"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:textAlignment="center"/>
       </LinearLayout>

       <LinearLayout
           android:id="@+id/scedule_setting"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@color/main_blue"
           android:layout_marginStart="10dp">
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@drawable/clock"
               app:tint="@color/white"/>

           <TextView
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Pengaturan Jadwal"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:textAlignment="center"/>
       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/scedule_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/bottom_nav_background"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengaturan Jadwal"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scedule_msg"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pakan Pagi"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">

            <EditText
                android:id="@+id/hour_pagi"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:hint="hh"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:inputType="time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/minute_pagi"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:hint="mm"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:inputType="time"/>

            <Button
                android:id="@+id/pagi_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Set"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/pagi_unset_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Unset"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pakan Siang"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">


            <EditText
                android:id="@+id/hour_siang"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:hint="hh"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:inputType="time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/minute_siang"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:hint="mm"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:inputType="time"/>

            <Button
                android:id="@+id/siang_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Set"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/siang_unset_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Unset"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pakan Sore"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">


            <EditText
                android:id="@+id/hour_sore"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:hint="hh"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:inputType="time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/minute_sore"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:hint="mm"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:inputType="time"/>

            <Button
                android:id="@+id/sore_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Set"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/sore_unset_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Unset"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pakan Malam"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">


            <EditText
                android:id="@+id/hour_malam"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:hint="hh"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:inputType="time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/minute_malam"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:hint="mm"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:inputType="time"/>

            <Button
                android:id="@+id/malam_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Set"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>
            <Button
                android:id="@+id/malam_unset_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Unset"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <Button
                android:id="@+id/scedule_no"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_shape"
                android:text="Batal"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/value_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/bottom_nav_background"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengaturan Nilai"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai Maksimal TDS"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">


            <EditText
                android:id="@+id/tds_max"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:inputType="number"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="PPM"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/tds_max_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Set"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai Minimum TDS"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">


            <EditText
                android:id="@+id/tds_min"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:inputType="number"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="PPM"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <Button
                android:id="@+id/tds_min_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Set"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai Maksimal Suhu"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">


            <EditText
                android:id="@+id/temp_max"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:inputType="number"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <Button
                android:id="@+id/temp_max_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Set"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai Minimum Suhu"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp">


            <EditText
                android:id="@+id/suhu_min"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:inputType="number"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <Button
                android:id="@+id/suhu_min_btn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Set"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/value_cancle_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_shape"
            android:text="Batal"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</FrameLayout>